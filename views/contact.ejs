<%- include("partials/header") -%> 

<div class="float-img">
    <img src="/img/hotel-contact.webp" alt="room-image">
    <div class="div-on-image" style="background-color: rgba(57, 31,20, 0.4);">
        <p>Contact Us</p>
        <h3>A hotel that defines <br>a new dimension of luxury.</h3>
    </div>
</div>
</section>

<!-- Contact Section -->
<section id="contact">
<div class="container-fluid">
    <div class="mapouter">
        <div class="gmap_canvas">
            <iframe id="gmap_canvas" src="https://maps.google.com/maps?q=Beant%20College%20of%20Engineering%20and%20Technology,%20Gurdaspur,%20Punjab%20143521&t=&z=11&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" style="border: 0" allowfullscreen></iframe>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Get in Touch</h2>
            </div>
            <div class="col-lg-8">
                <form class="contact-form form-contact" action="" method="POST" id="contactForm" novalidate="novalidate">
                    <div class="row">
                        <div class="col-12">
                            <grammarly-extension data-grammarly-shadow-root="true" class="cGcvT grammerly-contact"></grammarly-extension>
                            <div class="form-group">
                                <textarea class="form-control w-100" name="message" id="message" cols="30" rows="40" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Message'" placeholder="Enter Message" spellcheck="false"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input class="form-control valid" name="name" id="name" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your name'" placeholder="Enter your name">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input class="form-control valid" name="email" id="email" type="email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter email address'" placeholder="Email">
                            </div>
                        </div>    
                        <div class="col-12">
                            <div class="form-group">
                                <input class="form-control" name="subject" id="subject" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Subject'" placeholder="Enter Subject">
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-outline-dark btn-lg">Send</button>
                    </div>
                </form>
            </div>
            <div class="col-lg-3 offset-lg-1">
                <div class="media contact-info">
                    <span class="contact-info__icon">
                        <i class="fas fa-home fa-2x"></i>
                    </span>
                    <div class="media-body">
                        <h6>Gurdaspur, Punjab.</h6>
                        <p>Hostel No. 03</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon">
                        <i class="fas fa-tablet-alt fa-2x"></i>
                    </span>
                    <div class="media-body">
                        <h6>(+91) 99999 99999</h6>
                        <p>Mon to Fri, 9am to 6pm</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon">
                        <i class="fas fa-envelope fa-2x"></i>
                    </span>
                    <div class="media-body">
                        <h6>contact@dreampalace.com</h6>
                        <p>Send us your query anytime!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</section>

<%- include("partials/footer") -%> 