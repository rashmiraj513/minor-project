<%- include("partials/header-form") -%> 
<section id="signup">
    <div class="container">
        <div class="row justify-content-between align-items-center">
            <div class="col-md-6 col-sm-6 col-lg-6">
                <h1>Welcome to the <br>Dream Palace Hotel</h1>
                <h6>Luxury & most amazing place to stay.</h6>
            </div>
            <div class="vl"></div>
            <div class="col-md-6 col-sm-6 col-lg-6">
                <h5 class="headlines-5">Sign in to get personalized recommendations, follow us that you love, interact with blogs.</h5>
                <div class="form-border">
                    <h2 class="contact-title">Login to your account</h2>
                    <form class="contact-form form-contact" action="" method="POST" id="contactForm" novalidate="novalidate">
                        <div class="form-group">
                            <label for="">Email:</label>
                            <input class="form-control valid" name="name" id="name" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label for="">Password:</label>
                            <input class="form-control valid" name="email" id="email" type="email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'" placeholder="Password">
                        </div>
                        <div class="d-grip gap-2">
                            <button type="submit" class="btn btn-outline-primary btn-block">Login</button>
                        </div>
                    </form>
                </div>
                <h5 class="headlines-5">Don't have an account? <a href="/users/signup">Create One</a></h5>
                <h5 class="headlines-5">Click <a href="/">Here</a> to return back to Homepage.</h5>
                <h5 class="headlines-5">By clicking on "Login" you are agreeing to our <a href="#">Terms of Service</a> and acknowledge that our <a href="#">Privacy Policy</a> applies to you.</h5>
            </div>
        </div>
    </div>
</section>
<%- include("partials/footer-form") -%>