<%- include("partials/header-form") -%> 
<p style="text-align: center; align-self: center; margin-bottom: -5%;"><%=signUpMessage %> </p>
<section id="signup">
    <div class="container">
        <div class="row justify-content-between align-items-center">
            <div class="col-md-6 col-sm-6 col-lg-6">
                <h1>Welcome to the <br>Dream Palace Hotel</h1>
                <h6>Luxury & most amazing place to stay.</h6>
            </div>
            <div class="vl"></div>
            <div class="col-md-6 col-sm-6 col-lg-6">
                <h5 class="headlines-5">Create an account to receive great recommendations in your inbox, personalize your homepage, and offers information that you love.</h5>
                <div class="form-border">
                    <h2 class="contact-title">Sign Up here</h2>
                    <form class="contact-form form-contact" action="/users/signup" method="POST" id="contactForm">
                        <div class="form-group">
                            <label for="">Name:</label>
                            <input class="form-control valid" name="name" id="name" type="text" placeholder="Enter your name" autocomplete="off" required>
                        </div>
                        <div class="form-group">
                            <label for="">Email:</label>
                            <input class="form-control valid" name="email" id="email" type="email" placeholder="Email" autocomplete="off" required>
                        </div>
                        <div class="form-group">
                            <label for="">Password:</label>
                            <input class="form-control" name="password" id="password" type="password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'" placeholder="Password" required>
                        </div>
                        <div class="d-grip gap-2">
                            <button type="submit" class="btn btn-outline-primary btn-block">Register</button>
                        </div>
                    </form>
                </div>
                <h5 class="headlines-5">Already have an account? <a href="/users/login">Sign in</a></h5>
                <h5 class="headlines-5">Click <a href="/">Here</a> to return back to Homepage.</h5>
                <h5 class="headlines-5">By clicking on "Register" you are agreeing to our <a href="#">Terms of Service</a> and acknowledge that our <a href="#">Privacy Policy</a> applies to you.</h5>
            </div>
        </div>
    </div>
</section>

<%- include("partials/footer-form") -%> 